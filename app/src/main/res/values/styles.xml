<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login_activity_background</item>
        <item name="colorPrimaryDark">@color/login_activity_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Tinkoff.TextEdit.Login" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">@dimen/login_edit_width</item>
        <item name="android:layout_height">@dimen/login_edit_height</item>
        <item name="android:background">@drawable/bcg_edittext_gray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textCursorDrawable">@drawable/nothing</item>
    </style>

    <style name="Tinkoff.Text.Card.Header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tinkoff.Text.Card.Header2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Tinkoff.Text.Card.Header0" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tinkoff.Text.Card.Link" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tinkoff.Text.Chip.Simple" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/bcg_rect_round</item>
        <item name="android:backgroundTint">@color/event_chip_default</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
    </style>

</resources>
